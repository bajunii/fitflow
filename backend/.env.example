# Backend Server Configuration
PORT=5000
MONGODB_URI=mongodb://localhost:27017/fitness_center_app_dev_v3
JWT_SECRET=your_very_strong_jwt_secret_key_here_CHANGE_ME

# Mpesa Configuration
MPESA_ENVIRONMENT=sandbox # 'sandbox' or 'live'
MPESA_CONSUMER_KEY=YOUR_MPESA_CONSUMER_KEY
MPESA_CONSUMER_SECRET=YOUR_MPESA_CONSUMER_SECRET
MPESA_SHORTCODE=174379 # Your Business Shortcode
MPESA_PASSKEY=YOUR_MPESA_LIPA_NA_MPESA_PASSKEY
MPESA_CALLBACK_URL=https://your_domain.com/api/payments/mpesa/callback # Must be HTTPS and publicly accessible
MPESA_TRANSACTION_TYPE=CustomerPayBillOnline # Or CustomerBuyGoodsOnline

# PayPal Configuration
PAYPAL_ENVIRONMENT=sandbox # 'sandbox' or 'live'
PAYPAL_CLIENT_ID=YOUR_PAYPAL_SANDBOX_CLIENT_ID
PAYPAL_CLIENT_SECRET=YOUR_PAYPAL_SANDBOX_SECRET
PAYPAL_WEBHOOK_ID=YOUR_PAYPAL_WEBHOOK_ID # For verifying webhooks
PAYPAL_RETURN_URL=http://localhost:3000/payment-success # Or your deployed frontend success URL
PAYPAL_CANCEL_URL=http://localhost:3000/payment-cancel # Or your deployed frontend cancel URL

# Note: For Mpesa, the MPESA_SHORTCODE is often the same for PartyB.
# The MPESA_CALLBACK_URL for Mpesa and the PAYPAL_RETURN_URL/PAYPAL_CANCEL_URL for PayPal
# need to be updated based on your actual deployment.
# For local testing of Mpesa callbacks, you might need a tool like ngrok to expose your local server.
